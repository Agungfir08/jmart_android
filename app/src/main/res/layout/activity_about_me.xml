<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alamatToko"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".AboutMeActivity">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refres_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="My Account"
                    android:textColor="@color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="130dp"
                            android:layout_height="25dp"
                            android:text="Name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                        <TextView
                            android:id="@+id/txName"
                            android:layout_width="200dp"
                            android:layout_height="25dp"
                            android:gravity="right"
                            android:text="account name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"  />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="130dp"
                            android:layout_height="25dp"
                            android:text="Email"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"  />

                        <TextView
                            android:id="@+id/txEmail"
                            android:layout_width="200dp"
                            android:layout_height="25dp"
                            android:gravity="right"
                            android:text="account email"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"  />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="15dp"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="130dp"
                            android:layout_height="25dp"
                            android:text="Balance"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"  />

                        <TextView
                            android:id="@+id/txBalance"
                            android:layout_width="200dp"
                            android:layout_height="25dp"
                            android:gravity="right"
                            android:text="account balance"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"  />
                </LinearLayout>
        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/control_top_up_balance_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/linearLayout7"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
            app:startIconDrawable="@drawable/ic_idr"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp">

                <EditText
                    android:id="@+id/etTopUp"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:hint="Top Up Balance"
                    android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/button5"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:background="@drawable/custom_button"
            android:text="Top Up"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginRight="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/control_top_up_balance_input"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout7"
            app:layout_constraintTop_toTopOf="@+id/control_top_up_balance_input" />

        <Button
            android:id="@+id/registBtn"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/custom_button"
            android:text="Register Store"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/storeCheck"
            app:layout_constraintStart_toStartOf="@+id/storeCheck"
            app:layout_constraintTop_toBottomOf="@+id/storeCheck" />

        <TextView
            android:id="@+id/storeCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="You Don't Have Store Yet!"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/control_top_up_balance_input" />

        <Button
            android:id="@+id/accHistory"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:background="@drawable/custom_button"
            android:text="History"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/logOut"
            app:layout_constraintEnd_toEndOf="@+id/button5"
            app:layout_constraintTop_toTopOf="@+id/logOut" />

        <Button
            android:id="@+id/btnstore"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_button"
            android:text="store"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/control_top_up_balance_input" />

        <Button
            android:id="@+id/logOut"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/custom_button"
            android:text="Log Out"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/control_top_up_balance_input"
            app:layout_constraintTop_toBottomOf="@+id/control_top_up_balance_input" />

</androidx.constraintlayout.widget.ConstraintLayout>

