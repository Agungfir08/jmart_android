<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutStoreActivity">

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/store_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Store"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                        <TextView
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:id="@+id/name_about_store"
                            android:layout_width="130dp"
                            android:layout_height="25dp"
                            android:text="Name" />

                        <TextView
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:id="@+id/name_store"
                            android:layout_width="200dp"
                            android:layout_height="25dp"
                            android:text="TextView"
                            android:gravity="right"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/address_about_store"
                            android:layout_width="130dp"
                            android:layout_height="25dp"
                            android:text="Address"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"  />

                        <TextView
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:id="@+id/address_store"
                            android:layout_width="200dp"
                            android:layout_height="25dp"
                            android:text="TextView"
                            android:gravity="right"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="15dp"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="130dp"
                            android:layout_height="25dp"
                            android:text="Phone Number"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"  />

                        <TextView
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:id="@+id/phonenumber_store"
                            android:layout_width="200dp"
                            android:layout_height="25dp"
                            android:text="TextView"
                            android:gravity="right"/>
                </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnPhonetopup"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Phone Top Up"
            android:textAllCaps="false"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:background="@drawable/shape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnhistorystore" />

        <Button
            android:id="@+id/btnhistorystore"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="History"
            android:textAllCaps="false"
            android:background="@drawable/shape"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/btnPhonetopup"
            app:layout_constraintStart_toStartOf="@+id/btnPhonetopup"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
            android:layout_marginTop="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>